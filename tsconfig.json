{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": true,
    "outDir": "./build/",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "paths": {
      "~assets/*": ["src/assets/*"],
      "~services/*": ["src/services/*"],
      "~constants/*": ["src/constants/*"],
      "~components": ["src/components"],
      "~modules/*": ["src/modules/*"],
      "~utils/*": ["src/utils/*"],
      "~types/*": ["src/types/*"],
    }
  },
  "include": [
    "src"
  ],
  "files": [
    "custom.d.ts"
  ]
}
